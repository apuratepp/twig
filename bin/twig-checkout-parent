#!/usr/bin/env ruby

# Synopsis:
#
# - `twig checkout-parent [-b|--branch <branch>]`
#
# Usage:
#
# - `twig checkout-parent`:
#   Checks out the current branch's parent branch, if any, based on its
#   `diff-branch` property.
#
# - `twig checkout-parent -b <branch>`:
#   Checks out the given branch's parent branch, if any.
#
# Subcommand for Twig: <http://rondevera.github.io/twig/>
# Author: Ron DeVera <http://rondevera.com>

require 'rubygems'
require 'twig'

twig = Twig.new
twig.read_config_file!
twig.read_cli_options!(ARGV)

branch_name = twig.options[:branch] || twig.current_branch_name
parent_branch = twig.get_branch_property(branch_name, 'diff-branch') || ''

exec %{git checkout "#{parent_branch}"} unless parent_branch.empty?
