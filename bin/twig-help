#!/usr/bin/env ruby

# Your friendly neighborhood `twig --help` alias.
#
# Subcommand for Twig: <http://rondevera.github.io/twig/>
# Author: Ron DeVera <http://rondevera.com>

args = ARGV.dup
subcommand = args[0] || ''

# If no subcommand was given, default to `twig --help`
exec("twig #{subcommand} --help")
